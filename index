    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const jobForm = document.getElementById('job-form');
            const jobTableBody = document.getElementById('job-table-body');
            const totalCostElement = document.getElementById('total-cost');
            const addJasaJobsButton = document.getElementById('add-jasa-jobs');
            const addBahanJobsButton = document.getElementById('add-bahan-jobs');
            const mainTitleDisplay = document.getElementById('main-title-display');
            const mainTitleSelect = document.getElementById('main-title-select');
            const downloadButton = document.getElementById('download-button');
            const submitButton = document.getElementById('submit-button');
            const editIndexInput = document.getElementById('edit-index');
            const jobDescriptionInput = document.getElementById('job-description');
            const jobCostInput = document.getElementById('job-cost');

            let jobs = [];

            // Data pekerjaan dari gambar pertama (Jasa Aja)
            const predefinedJobsJasa = [
                { description: "Pembongkaran atap dan pembuatan baru", cost: 30000000 },
                { description: "Perbaikan atap kanopi", cost: 1500000 },
                { description: "Perbaikan shower kamar mandi", cost: 1500000 },
                { description: "Servis plafon yang sudah lembab", cost: 1000000 },
                { description: "Renovasi kamar mandi", cost: 2500000 }
            ];

            // Data pekerjaan dari gambar kedua (Borongan dan Bahan)
            const predefinedJobsBahan = [
                { description: "Pembongkaran atap dan pembuatan atap baru", cost: 66000000 },
                { description: "Pembuangan seluruh material atau puing hasil pembongkaran", cost: 3000000 },
                { description: "Perbaikan atap kanopi", cost: 2500000 },
                { description: "Perbaikan plafon yang sudah rusak", cost: 2500000 },
                { description: "Renovasi kamar mandi", cost: 4500000 }
            ];

            // Fungsi untuk memformat angka dengan titik sebagai pemisah ribuan
            const formatCost = (number) => {
                if (typeof number === 'string') {
                    number = parseInt(number.replace(/\./g, ''), 10);
                }
                return new Intl.NumberFormat('id-ID').format(number);
            };

            // Event listener untuk input biaya, memformat saat pengguna mengetik
            jobCostInput.addEventListener('input', (e) => {
                const value = e.target.value.replace(/\D/g, ''); // Hapus semua karakter non-digit
                e.target.value = formatCost(value);
            });

            const renderTable = () => {
                jobTableBody.innerHTML = '';
                let total = 0;
                jobs.forEach((job, index) => {
                    const row = document.createElement('tr');
                    row.className = 'hover:bg-gray-100 transition duration-150 ease-in-out';
                    
                    const formattedCost = new Intl.NumberFormat('id-ID', {
                        style: 'currency',
                        currency: 'IDR',
                        minimumFractionDigits: 0
                    }).format(job.cost);

                    row.innerHTML = `
                        <td class="px-4 py-4 sm:px-6 whitespace-nowrap text-sm text-gray-600">${index + 1}</td>
                        <td class="px-4 py-4 sm:px-6 text-sm font-medium text-gray-900">${job.description}</td>
                        <td class="px-4 py-4 sm:px-6 whitespace-nowrap text-sm text-gray-600">${formattedCost}</td>
                        <td class="px-4 py-4 sm:px-6 whitespace-nowrap text-right text-sm font-medium space-x-2">
                            <button onclick="editJob(${index})" class="text-blue-600 hover:text-blue-800 transition duration-150 ease-in-out">Edit</button>
                            <button onclick="deleteJob(${index})" class="text-red-600 hover:text-red-800 transition duration-150 ease-in-out">Hapus</button>
                        </td>
                    `;
                    jobTableBody.appendChild(row);
                    total += job.cost;
                });

                const formattedTotal = new Intl.NumberFormat('id-ID', {
                    style: 'currency',
                    currency: 'IDR',
                    minimumFractionDigits: 0
                }).format(total);

                totalCostElement.textContent = formattedTotal;
            };

            jobForm.addEventListener('submit', (e) => {
                e.preventDefault();
                const description = jobDescriptionInput.value;
                const costValue = jobCostInput.value.replace(/\./g, '');
                const cost = parseFloat(costValue);
                const editIndex = parseInt(editIndexInput.value);

                if (description && cost > 0) {
                    if (editIndex > -1) {
                        jobs[editIndex] = { description, cost };
                        editIndexInput.value = -1;
                        submitButton.textContent = 'Tambah Pekerjaan';
                    } else {
                        jobs.push({ description, cost });
                    }
                    renderTable();
                    jobForm.reset();
                } else {
                    alert('Mohon isi semua data dengan benar.');
                }
            });

            addJasaJobsButton.addEventListener('click', () => {
                jobs = [...jobs, ...predefinedJobsJasa];
                renderTable();
            });

            addBahanJobsButton.addEventListener('click', () => {
                jobs = [...jobs, ...predefinedJobsBahan];
                renderTable();
            });

            window.editJob = (index) => {
                const jobToEdit = jobs[index];
                jobDescriptionInput.value = jobToEdit.description;
                jobCostInput.value = formatCost(jobToEdit.cost);
                editIndexInput.value = index;
                submitButton.textContent = 'Perbarui Pekerjaan';
                jobDescriptionInput.focus();
            };

            window.deleteJob = (index) => {
                jobs.splice(index, 1);
                renderTable();
            };

            mainTitleSelect.addEventListener('change', (e) => {
                mainTitleDisplay.textContent = e.target.value;
            });

            downloadButton.addEventListener('click', () => {
                const printableDiv = document.createElement('div');
                printableDiv.className = 'printable-table-container';
                printableDiv.style.position = 'absolute';
                printableDiv.style.left = '-9999px';
                printableDiv.style.top = '0';

                const currentTitle = mainTitleDisplay.textContent;
                let htmlContent = `<h1 style="text-align: center; font-size: 24px; font-weight: bold; margin-bottom: 24px; color: #1f2937;">${currentTitle}</h1>`;
                htmlContent += `
                    <table>
                        <thead>
                            <tr>
                                <th style="background-color: #1e40af; color: white;">No</th>
                                <th style="background-color: #1e40af; color: white;">Jenis Pekerjaan</th>
                                <th style="background-color: #1e40af; color: white;">Biaya</th>
                            </tr>
                        </thead>
                        <tbody>
                `;
                let total = 0;
                jobs.forEach((job, index) => {
                    const formattedCost = new Intl.NumberFormat('id-ID', {
                        style: 'currency',
                        currency: 'IDR',
                        minimumFractionDigits: 0
                    }).format(job.cost);
                    total += job.cost;
                    const rowBg = index % 2 === 0 ? '#f9fafb' : '#ffffff';
                    htmlContent += `
                        <tr style="background-color: ${rowBg};">
                            <td>${index + 1}</td>
                            <td>${job.description}</td>
                            <td>${formattedCost}</td>
                        </tr>
                    `;
                });
                const formattedTotal = new Intl.NumberFormat('id-ID', {
                    style: 'currency',
                    currency: 'IDR',
                    minimumFractionDigits: 0
                }).format(total);

                htmlContent += `
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="2" style="text-align: right; font-weight: bold; background-color: #f3f4f6; color: #1f2937;">Total</td>
                                <td style="font-weight: bold; background-color: #f3f4f6; color: #1f2937;">${formattedTotal}</td>
                            </tr>
                        </tfoot>
                    </table>
                `;

                printableDiv.innerHTML = htmlContent;
                document.body.appendChild(printableDiv);

                html2canvas(printableDiv, {
                    scale: 2,
                    backgroundColor: '#ffffff'
                }).then(canvas => {
                    document.body.removeChild(printableDiv);

                    const image = canvas.toDataURL('image/png');
                    const link = document.createElement('a');
                    link.download = `${currentTitle.toLowerCase().replace(/\s/g, '-')}.png`;
                    link.href = image;
                    link.click();
                });
            });

            renderTable();
        });
    </script>
</body>
</html>
