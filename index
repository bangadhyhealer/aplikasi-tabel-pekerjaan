                        <!-- Data pekerjaan akan di-generate di sini -->
                    </tbody>
                    <tfoot>
                        <tr class="bg-gray-100">
                            <td colspan="2" class="px-4 py-4 sm:px-6 whitespace-nowrap text-right font-bold text-lg text-gray-900">Total</td>
                            <td id="total-cost" class="px-4 py-4 sm:px-6 whitespace-nowrap text-left font-bold text-lg text-gray-900">Rp0</td>
