                <option value="BORONGAN JASA SAJA">BORONGAN JASA SAJA</option>
                <option value="BORONGAN DAN BAHAN">BORONGAN DAN BAHAN</option>
                <option value="DAFTAR RINCIAN BIAYA">DAFTAR RINCIAN BIAYA</option>
                <option value="LAPORAN ANGGARAN PEKERJAAN">LAPORAN ANGGARAN PEKERJAAN</option>
                <option value="INVOICE PEKERJAAN">INVOICE PEKERJAAN</option>
            </select>
        </div>

        <!-- Form Input -->
        <div class="mb-8 p-4 sm:p-6 bg-gray-50 rounded-xl shadow-inner">
            <h2 class="text-xl font-bold mb-4 text-gray-800">Input Pekerjaan Baru</h2>
            <form id="job-form" class="space-y-4">
                <input type="hidden" id="edit-index" value="-1">
                <div>
                    <label for="job-description" class="block text-sm font-medium text-gray-700 mb-1">Jenis Pekerjaan</label>
                    <input type="text" id="job-description" placeholder="Masukkan jenis pekerjaan" required class="form-input w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" list="job-suggestions">
                    <!-- Datalist untuk saran input otomatis -->
                    <datalist id="job-suggestions">
                        <option value="Pembongkaran atap dan pembuatan baru"></option>
                        <option value="Perbaikan atap kanopi"></option>
                        <option value="Perbaikan shower kamar mandi"></option>
                        <option value="Servis plafon yang sudah lembab"></option>
                        <option value="Renovasi kamar mandi"></option>
                        <option value="Pembongkaran atap dan pembuatan atap baru"></option>
                        <option value="Pembuangan seluruh material atau puing hasil pembongkaran"></option>
                        <option value="Perbaikan plafon yang sudah rusak"></option>
                    </datalist>
                </div>
                <div>
                    <label for="job-cost" class="block text-sm font-medium text-gray-700 mb-1">Biaya (Rp)</label>
                    <input type="text" id="job-cost" placeholder="Masukkan biaya" required class="form-input w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-right">
                </div>
                <button type="submit" id="submit-button" class="w-full bg-blue-600 text-white font-bold py-3 px-4 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200 ease-in-out shadow-md hover:shadow-lg">
                    Tambah Pekerjaan
                </button>
            </form>
            <div class="mt-4 grid grid-cols-1 sm:grid-cols-2 gap-4">
                <button id="add-jasa-jobs" class="w-full bg-emerald-600 text-white font-bold py-3 px-4 rounded-lg hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 transition duration-200 ease-in-out shadow-md hover:shadow-lg">
